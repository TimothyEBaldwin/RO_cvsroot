        & &E0000401     ; CR: FIFO load 16 words, 1 bpp, ck/1, hclk
   ]
   [ VIDCClockSource = "RCLK"
        & &E0000402     ; CR: FIFO load 16 words, 1 bpp, ck/1, rclk
   ]
