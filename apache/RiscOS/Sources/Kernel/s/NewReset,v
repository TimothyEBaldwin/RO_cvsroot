processor_names
        DCB     "ARM 600 Processor",10,13,10,0
        ALIGN 32
        DCB     "ARM 610 Processor",10,13,10,0
        ALIGN 32
        DCB     "ARM 700 Processor",10,13,10,0
        ALIGN 32
        DCB     "ARM 710 Processor",10,13,10,0
        ALIGN 32
        DCB     "ARM 810 Processor",10,13,10,0
        ALIGN 32
        DCB     "StrongARM Processor",10,13,10,0
        ALIGN 32

        ; type, internal type, features
cputable
        DCD &6000,0,0
        DCD &6100,1,0
        DCD &7000,2,0
        DCD &7100,3,0
        DCD &8100,4,2_11101
        DCD &a100,5,2_11111
        DCD -1
 ]

a2034 24
 [ StrongARM
Processor_Type
        ReadCop  R0,CR_ID               ; see data sheets for values
        ; ARM 600 funny
        TST     R0,#&f000
        MOVEQ   R0,R0, LSL #4
        AND     R0,R0,#&ff00
        ADR     R1,cputable
66
        LDR     R2,[R1],#4
        TEQ     R2,#0
        MOVMI   R0,#0
        STRMIB  R2,[R0,#ProcessorType]
        MOVMI   PC,LR
        TEQ     R2,R0
        ADDNE   R1,R1,#8
        BNE     %BT66
        LDMIA   R1,{R0,R2}
        MOV     R1,#0
        STRB    R0,[R1,#ProcessorType]
        STRB    R2,[R1,#ProcessorFlags]
        MOV     PC,LR
 ]

