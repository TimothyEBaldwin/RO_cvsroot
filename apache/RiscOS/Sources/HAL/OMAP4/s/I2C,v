	MOV	a4, #1
d631 1
a631 1
	DebugReg  a4, "send_bytes: "
d633 8
a640 8
	LDR	v2, [v5, #I2C_XCurrent]
	LDR	a3, [v5, #I2C_XBytes] ; Get bytes sent
	LDMIB	v2, {a2,ip} ; Get data ptr, transfer length
10
	; Check if we need to advance to the next iic_transfer
	CMP	a3, ip
	BEQ	%FT20
	LDRB	v1, [a2,a3]
d642 1
