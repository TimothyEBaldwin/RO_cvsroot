	BEQ	unexpected_error ; Hardware is receiving more data than we want
d743 6
a748 6
	ADD	v2, v2, #12
	STR	v2, [v5, #I2C_XCurrent]
	MOV	a3, #0
	STR	a3, [v5, #I2C_XBytes]
	LDMIA	v2, {a1-a2,ip}
	TST	a1, #1:SHL:31
