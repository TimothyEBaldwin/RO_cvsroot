a506 17
	LDR	a2, SDMARegs
	MRS	a3, CPSR
	LDR	ip, SDMAIRQMask
	ORR	a4, a3, #I32_bit
	MSR	CPSR_c, a4 ; Interrupts off
	LDR	a4, [a2, #DMA4_IRQENABLE_L0]
	BIC	a4, a4, ip
	STR	a4, [a2, #DMA4_IRQENABLE_L0] ; Mask the interrupt
