a113 14
	SUBS	a4, a4, #1
	STRPL	a2, [a3, #-4]!
	SUBPL	a2, a2, #SDMA_DeviceSize
	BPL	%BT10

	; This is a bit nasty. We register the DMA controller before we initialise the channels.
	MOV	a2, v1
	MOV	a1, #0
	CallOS	OS_AddDevice

	ADR	v1, SDMAWS + SDMAC_DeviceSize
	MOV	v2, #0
	LDR	v3, L4_sDMA_Log
	ADD	v4, v3, #DMA4_i
d116 1
a116 1
	DebugReg v2, "Set up device "
d118 18
