	MOV	v1, #DMA4_CICR_LAST_IE
	STR	v1, [v5, #DMA4_CICRi] ; frame end interrupt enabled
	MOV	v1, #1
	STR	v1, [v5, #DMA4_CFNi] ; 1 frame
