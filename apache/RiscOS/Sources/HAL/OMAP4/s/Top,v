	; v2 = size of HAL+OS
	; v4 = end of OS/RAM
	; v5 = start of HAL
	; v8 = OS entry table ptr
	DebugChar a1,a2,69
	DebugTimeNoMMU a1, "ROM relocated @@ "
	; Clear RAM up to v5
	MOV	a1, v5
	BL	clear_ram
