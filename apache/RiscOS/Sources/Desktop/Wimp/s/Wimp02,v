      [ ChildWindows
        CMP     R1,R0                   ; if scrollbar gets too small, we must squash the arrows to fit
        BLE     vscrollfits

        MOV     R0,R0,LSR #1            ; divide equally between up/down arrows
        LDR     R1,dy_1
        BIC     R0,R0,R1                ; round to next pixel boundary
