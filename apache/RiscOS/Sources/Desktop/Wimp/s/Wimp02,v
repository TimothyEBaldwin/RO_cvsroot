        TST     R14, #getrect_firstrect :OR: getrect_keepdragbox
        BIC     R14, R14, #getrect_firstrect
        STR     R14, getrectflags
        BNE     %FT06                   ; don't do it if firstrect or while plotting a clipped dragbox
d9143 1
