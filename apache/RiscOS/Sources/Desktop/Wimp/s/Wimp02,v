 [ Twitter

checktwitter
; In:   handle = window handle
; Out:  NE => twitter, EQ => don't twitter
;
        ENTRY
        LDR     lr, [handle, #w_flags]
        TST     lr, #wf_autoredraw
        LDRNE   lr, modeflags
        TSTNE   lr, #1:SHL:8
        EXIT

antitwitter ENTRY "r0-r3"
        ADR     r0, clipx0
        LDMIA   r0,{r0-r3}
        SUB     r1,r1,#2
        SUB     r2,r2,r0
        SUB     r3,r3,r1
        ADD     r3,r3,#2
        SWI     &a38c0
        CLRV
        EXIT
