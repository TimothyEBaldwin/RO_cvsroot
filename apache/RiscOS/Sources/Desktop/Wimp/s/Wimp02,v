        Debug   opn,"int_force_redraw_border first rectangle:",cx0,cy0,cx1,cy1
02
        Pull    "handle,userblk"
      ]
        BL      markinvalidrects                ; we can do this either during int_flush_open, or after int_flush_opens has finished
        BL      losewindowrects

        EXIT
      ]
