        BL      calc_w_iconposn2        ; x0..y1 = bounds of scroll region, cx0..cy1 = 'normal' bounds

        LDR     R14,dy

        SUB     R0,cy1,R14
        CMP     y0,R0                   ; force within the 'normal' box
        MOVGT   y0,R0

        ADD     R0,cy0,R14
        CMP     y1,R0
        MOVLT   y1,R0

        ADD     R0,y0,R14
        CMP     y1,R0
        MOVLT   y1,R0

      ; Debug   ,"calc_w_iconposn (v-scrollbar)",R3,x0,y0,x1,y1

