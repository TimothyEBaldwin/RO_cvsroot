 * warning_box                                                               *
 *                                                                           *
 * Pop up a wimp warning box.                                                *
 *---------------------------------------------------------------------------*/

void warning_box(char *string)
{
    _kernel_oserror e;
    e.errnum = 0;
    strcpy(e.errmess, string);
    wimp_report_error(&e, 0, TaskName, 0, 0, 0);
}


