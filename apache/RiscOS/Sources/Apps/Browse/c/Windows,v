/*************************************************/
/* windows_url_to_be_shown()                     */
/*                                               */
/* Called when the EOpenURLWindow event is       */
/* generated, typically when the Open URL window */
/* is about to be shown. Handles any icon        */
/* processing commands in the writable.          */
/*                                               */
/* Parameters are as standard for a Toolbox      */
/* event handler.                                */
/*************************************************/

int windows_url_to_be_shown(int eventcode, ToolboxEvent * event, IdBlock * idb, void * handle)
{
  char text[MaxUrlLen];

  ChkError(windows_process_component_text(idb->self_id, OpenWritable, text, sizeof(text), 0, 1));

  return 1;
}

/*************************************************/
/* windows_find_to_be_shown()                    */
/*                                               */
/* Called when the EOpenFindWindow event is      */
/* generated, typically when the Find window is  */
/* about to be shown. Handles any icon           */
/* processing commands in the writable.          */
/*                                               */
/* Parameters are as standard for a Toolbox      */
/* event handler.                                */
/*************************************************/

int windows_find_to_be_shown(int eventcode, ToolboxEvent * event, IdBlock * idb, void * handle)
{
  char text[MaxFindLen];

  ChkError(windows_process_component_text(idb->self_id, FindWritable, text, sizeof(text), 0, 1));

  return 1;
}

/*************************************************/
