   char   font[40];

   if (system)
           font__add_new_font( &font__tree, "System" );

   while (font_count != -1)
   {
      if ( wimpt_complain(font_list( font, &font_count ) ) != NULL)
              return NULL;
      if (font_count != -1)
         if ( font__add_new_font( &font__tree, font ) == NULL )
         {
            werr(0, "No room for font list.\n");
            return NULL;
         }
   }
   return font__tree;
