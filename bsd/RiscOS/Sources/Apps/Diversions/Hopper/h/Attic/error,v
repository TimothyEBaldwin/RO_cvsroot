/*
  Display errors on the screen, etc..
  error.h
*/

#ifndef _ERROR_
#define _ERROR_ 1


/* Include the required files */
#include "os.h"


/* Show the error on the screen */
extern void error_show_error ( os_error *the_error ) ;

/* Report an internal error, this could be because of anything */
extern void error_internal_error ( void ) ;

/* Report a memory error, this is due to a memory shortage */
extern void error_memory_error ( char *what ) ;

/* Make up an error */
extern void error_make_error ( char *errmess ) ;


#endif

