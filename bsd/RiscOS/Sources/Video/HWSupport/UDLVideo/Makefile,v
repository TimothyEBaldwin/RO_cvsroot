text
@d49 1
a49 4

RES_OBJ         =
SA_OBJS         = ${OBJS} sa_res
CUSTOMRES       = custom
a52 10
resources: resources_common Resources.decomp Resources.huff16
        ${CP} Resources.decomp ${RESFSDIR}.decomp ${CPFLAGS}
        ${CP} Resources.huff16 ${RESFSDIR}.huff16 ${CPFLAGS}

o.sa_res: ${MERGEDMSGS} ${DIRS} Resources.decomp Resources.huff16
        ${RESGEN} ${RES_AREA} $@@ ${MERGEDMSGS} Resources.${TARGET}.Messages Resources.decomp Resources.${TARGET}.decomp Resources.huff16 Resources.${TARGET}.huff16

od.sa_res: o.sa_res ${DIRS}
        ${CP} o.sa_res od.sa_res ${CPFLAGS}

@

