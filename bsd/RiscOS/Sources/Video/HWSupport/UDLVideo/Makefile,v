# Makefile for UDL video driver
#

DEBUG ?= FALSE

ifeq ($(DEBUG),TRUE)
CFLAGS += -DDEBUGLIB
CMHGFLAGS += -DDEBUGLIB
LIBS = ${DEBUGLIBS} ${NET5LIBS}
endif

COMPONENT       = UDLVideo
OBJS            = udl usb screen netbsd asm misc cmodule graphicsv devcaps
CMHGFILE        = modhead
HDRS            =

CINCLUDES       = -ITCPIPLibs:,C:USB
CFLAGS          += -ff -wp -wc -DDISABLE_PACKED -D_KERNEL -DKERNEL
CMHGDEFINES     = -DCOMPONENT=${COMPONENT} ${CDEFINES}
CMHGDEPENDS     = cmodule graphicsv
RAMCDEFINES     = -DSTANDALONE
INSTRES_FILES   = decomp huff16

include CModule

# Dynamic dependencies:
